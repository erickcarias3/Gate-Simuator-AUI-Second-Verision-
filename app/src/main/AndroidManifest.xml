    xmlns:tools="http://schemas.android.com/tools"
    package="com.logisim.logicgate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="TestApp"
        tools:ignore="GoogleAppIndexingWarning">
